CREATE DATABASE HOSTEXPRESS 
GO
CREATE TABLE HE_EMPRESAS (
    IDE INT AUTO_INCREMENT PRIMARY KEY,
    CNPJ INT NOT NULL CHECK LENGTH(CNPJ) = 14,
    NOME_FANTASIA VARCHAR(MAX),
    ESPECIALIDADE VARCHAR(20),
    CEP INT NOT NULL CHECK LENGTH(CEP) = 8,
    ENDERECO VARCHAR(150),
    ENDERECO_NUM INT NOT NULL,
    BAIRRO VARCHAR(50),
    CIDADE INT NOT NULL,
)
GO
CREATE TABLE HE_PRODUTOS (
    IDP INT AUTO_INCREMENT PRIMARY KEY,
    EMPRESA_ID INT FOREIGN KEY REFERENCES HE_EMPRESAS(IDE),
    DESCRICAO VARCHAR(MAX),
    CATEGORIA VARCHAR(100), // OU INT
    UNIDADE VARCHAR(2),
    EMBALAGEM INT NOT NULL,
    PRECO_UN DECIMAL(10,2), 
)
GO
